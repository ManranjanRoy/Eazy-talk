<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/a1"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="10dp"
                android:paddingTop="50dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profilepic"
                    android:src="@drawable/dashboard_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:id="@+id/name"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/text_sizebig"
                    android:text="Satish Sharmahvkhvjv lk ljblkjblkb;k k;jbkljblk "
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"/>
                <TextView
                    android:id="@+id/exp"
                    android:textSize="@dimen/text_sizehead"
                    android:text="Exp - 9 years"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:paddingHorizontal="5dp"
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:src="@drawable/dashboard_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:src="@drawable/dashboard_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:src="@drawable/dashboard_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:src="@drawable/dashboard_video2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/status"
                android:padding="5dp"
                android:src="@drawable/dashboard_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>